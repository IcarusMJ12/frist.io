{
  "name": "frist.io",
  "version": "0.1.0",
  "description": "React to any page on the internet.",
  "scripts": {
    "build": "./build.civet",
    "test": "./node_modules/c8/bin/c8.js node_modules/mocha/bin/mocha.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IcarusMJ12/frist.io.git"
  },
  "keywords": [
    "reactions",
    "emoji",
    "social"
  ],
  "author": "Igor Kaplounenko",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IcarusMJ12/frist.io/issues"
  },
  "homepage": "https://github.com/IcarusMJ12/frist.io#readme",
  "devDependencies": {
    "@danielx/civet": "^0.6.86",
    "c8": "^10.1.2",
    "chai": "^5.1.1",
    "glob": "^10.3.15",
    "mocha": "^10.4.0",
    "path": "^0.12.7",
    "pug": "^3.0.2",
    "sinon": "^18.0.0",
    "sinon-chrome": "^3.0.1",
    "stylus": "^0.63.0"
  },
  "c8": {
    "all": true,
    "reporter": [
      "lcov",
      "text"
    ],
    "extension": [
      ".civet"
    ],
    "include": [
      "src"
    ]
  },
  "mocha": {
    "extension": [
      "civet"
    ],
    "loader": [
      "./node_modules/@danielx/civet/dist/esm.mjs"
    ],
    "reporter": "dot",
    "recursive": true,
    "spec": [
      "tests"
    ]
  }
}
