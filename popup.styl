body
  box-sizing border-box
  background-color #181818
  width 48rem

ul
  float left
  list-style-type none
  column-count 8
  margin 0
  padding 0

li
  cursor pointer
  margin 0
  padding 0
  height 2rem
  line-height 1.9rem
  width 5rem
  box-sizing border-box
  border 1px solid transparent
  border-radius 5px

.reaction
  float left
  border none
  outline none
  width 1.8rem
  font-size 1.5rem

.reaction-count
  height 1.9rem
  float left
  border none
  outline none
  color white
  width 3rem
  font-size 1.2rem
  text-align center

.reacted
  border 1px solid white
  background-color #404040

#options
  cursor pointer
  float left
  border-left 1px solid black
  margin-top 0.8rem
  margin-left 0.2rem
  padding-left 0.2rem
  background-color transparent
  font-size 1.5 rem
  width 1.6 rem

*, *:before, *:after
  box-sizing inherit
