body
  box-sizing border-box
  background-color #181818
  color white
  width 100%

table
  width 100%

#tabs
  button
    font-size 2rem
    display block
    cursor pointer
    transition 0.3s
    padding-bottom 0.25rem
    background-color black
    &:hover
      background-color #ccc
    &.active
      background-color #ddd
  width 4%
  float left

#main
  width 95%
  margin 0px
  float left

.tabcontent
  width 100%
  border-left none
  display none

#loader
  border-top 16px solid red
  border-radius 50%
  width 120px
  height 120px
  margin auto
  animation spin 2s linear infinite

@keyframes {spin}
  {0%}
    transform rotate(0deg)
  {100%}
    transform rotate(360deg)

th
  font-size 1.5rem

td:nth-child(-n+2)
  font-size 1rem
  max-width 34rem
  width 34rem
  overflow hidden

td:nth-child(3)
  font-size 0.8rem
  white-space nowrap

td:nth-child(n+4)
  font-size 1.5rem
  width 1.8rem

tr
  cursor pointer

.selected
  border 1px solid white
  background-color #404040

.deselected
  filter grayscale(100%)
